{
    // git related settings
    "git.useEditorAsCommitInput": false, // prevent editor looking like continously busy after committing with an empty message
    "git.confirmSync": false, // disable pop-up with confirmation questions after click on synchronise
    "git.enableSmartCommit": true, // stage all changes when none of the changes are stages, instead of showing pop-up with a warning
    "git.postCommitCommand": "sync", // sync automatically after each commit, prevents forgetting push to github after commit
    "git.rebaseWhenSync": false, // true gives lineair (simple) commitline, false better shows what really happened
    "git.mergeEditor": true, // open merge-editor when conflicts occur
    "git.autofetch": true, // autofetch (fetch means count, not read) changes from github periodically
    "git.autofetchPeriod": 60, // autofetch period 60 seconds
    "merge-conflict.autoNavigateNextConflict.enabled": true, // auto navigate to next merge conflict after resolving one, must be false to prevent ignoring merge ours strategy

    // copilor settings
    "github.copilot.enable": { // disable copilot code suggestions in editor, we rather stick to autocomplete and use copilot chat for code snippets
        "*": false
    },

    // hide (true) or unhide (false) .* directories and files in the editor
    "files.exclude": {
        "**/.*": true,
        "README_images/": true,
        "vite.config.js/": true
    },

}