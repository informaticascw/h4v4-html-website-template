// Configuration of server image and settings in Codespaces
// File format: https://aka.ms/devcontainer.json. 
{
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/universal:latest",

	// Use 'postCreateCommand' to run commands after the container is created.
	// "git config pull.rebase false", => needs to be configured before first pull or merge to prevent error
	// "git config merge.ours.driver true", => configure git to use 'ours' merge strategy by default, this is not very git-like, but makes it easier voor studenten
	// "git config --global merge.conflictStyle diff3" => show source between ours and theirs in merge conflicts
	"postCreateCommand": "git config pull.rebase false && git config merge.ours.driver true && git config --global merge.conflictStyle diff3", 
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		5173
	],
	"portsAttributes": {
		"5173": {
			"label": "Web Server",
			"onAutoForward": "notify" // openBrowser is often blocked
		}
	},
	
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"mathematic.vscode-pdf", // add viewer for pdf-files (this one supports vscode-web)
				"ms-vsliveshare.vsliveshare", // add google-docs like typing in same file, click on live-share button in left icon pane
				"mhutchie.git-graph", // add graphical viewer for branches and commits, click on button in Source-Code tab
				"GitHub.copilot-chat", "GitHub.copilot" // finish Copilot setup
			]
		}
	}
}